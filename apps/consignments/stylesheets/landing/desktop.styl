.consignments-header
  position relative
  padding gutter
  text-align center
  background-color black
  color white
  height 530px
  display flex
  justify-content center
  align-items center
  flex-direction column
  background-size cover
  background-repeat none
  background-position center center

  &__headline
    garamond-size('xl-headline')
  &__subheadline
    garamond-size('s-headline')

  &__cta
    margin gutter 0
    > h3
      margin (gutter / 2) 0
      avant-garde-size('m-headline')
    input
      background-color white

.consignments-sections
  // `.responsive-layout-container`-ish
  margin 0 auto
  padding 0 55px
  @media screen and (min-width: 1440px)
    padding 0 150px
  @media screen and (min-width: 1660px)
    padding 0 200px

.consignments-section
  display flex
  align-items center
  padding gutter
  border-bottom 1px solid gray-lighter-color

  &__about
    width 50%
    padding gutter 0
    &:first-child
      padding-right (gutter * 4)
    &:last-child
      padding-left (gutter * 4)

    &__headline
      garamond-size('l-headline')
    &__description
      block-margins(gutter)
      garamond-size('l-body')

  &__images
    width 50%
    &:last-child
      text-align right
    > img
      display inline-block
      max-width 100%
      vertical-align bottom

    &.consignments-section__images--logos
      padding gutter
    &__logo
      width calc('50% - %s' % gutter)
      display inline-block
      margin (gutter / 2)
      vertical-align middle !important

.consignments-steps
  padding gutter
  border-bottom 1px solid gray-lighter-color

  &__headline
    garamond-size('l-headline')

  &__steps
    display flex
    justify-content space-between
    margin gutter 0
    &__step
      width 32%
      &__image
        max-width 100%
      &__description
        margin 20px 0 40px
        > span
          float left
          margin-right gutter
          garamond-size('xxl-headline')
        > p
          padding 0 (gutter * 2)
          garamond-size('l-body')

.consignments-recently-sold
.consignments-in-demand
  padding gutter
  border-bottom 1px solid gray-lighter-color

.consignments-recently-sold
.consignments-in-demand
.consignments-footer
  h3
    garamond-size('l-headline')

.consignments-in-demand
  &__artists
    display flex
    justify-content space-between
    flex-wrap wrap
    margin gutter 0
    &__artist
      width 15%
      margin-bottom gutter
      &__thumbnail
        display block
        > img
          width 100%
      &__name
        margin 10px 0
        avant-garde-size('body')
      &__button
        //

.consignments-footer
  text-align center
  width 40%
  margin 0 auto
  padding (gutter * 2) 0 (gutter * 4)
  > h3
    margin-bottom gutter

.consignments-credit
  garamond-size('s-body')
  color gray-color
  font-style italic


mpv-height = 665px
mpv-padding = 20px
// narrow mpv height based on 1024 x 768 viewport
// to catch some differing FAQ lengths
mpv-height-narrow = 710px

.faq-multi-page
  min-height mpv-height
  border-top 1px solid gray-lighter-color
  @media screen and (max-width: smallBreakpoint)
    min-height mpv-height-narrow
  .js-multi-page-embed
    margin auto
    width 80%
    padding mpv-padding 0
    min-height mpv-height - (mpv-padding * 2)
    @media screen and (max-width: smallBreakpoint)
      width 90%
      min-height mpv-height-narrow - mpv-padding
    .mpv-page
      height: mpv-height - (mpv-padding * 2)

