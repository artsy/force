artwork-page = {
  metadata: {
    width: 280px
  }
}

.artwork-page
  padding (gutter / 2) 0

.artwork
  //

  &__main
    display flex
    align-items stretch

    &__overview
    &__metadata
      //

    &__metadata
      z-index 1
      width: artwork-page.metadata.width

    &__overview
      width calc('100% - %s' % (artwork-page.metadata.width + gutter))
      margin-right: gutter

.artwork-section
  margin (gutter /3) 0 (gutter * 2) 0
  padding-top distance(25px, 'garamond-s-headline')
  garamond-size('s-body')
  border-top 1px solid gray-lighter-color

  &__jump
    margin-top gutter

    > a
      display inline-block
      vertical-align bottom
      sans('body')
      padding distance(20px) 45px 0 0
      text-decoration none
      border-top 1px solid gray-lighter-color

