@import '../../../components/stylus_lib'

artwork-image-size = 640px
artwork-detail-width = 250px
artwork-related-content-smaller-width = 175px
artwork-detail-item-height = 36px

#artwork-page
  padding 20px 0
  > section
    clearfix()
    margin 20px 0
    padding 20px 0
    border-top 1px solid gray-lighter-color
    h2
    h3
      margin 12px 0 27px
      font-size 15px
    h2 a
      text-decoration none

.artwork-image-zoom
  cursor -moz-zoom-in
  cursor -webkit-zoom-in

.artwork-container
  display table
  position relative
  width 100%
  height auto
  z-index 1
  // First step down
  @media screen and (max-width: (artwork-image-size + (artwork-detail-width * 2) + (layout-side-margin * 2)))
    .artwork-related-content
      width artwork-related-content-smaller-width
  // Second step down
  @media screen and (max-width: (artwork-image-size + artwork-detail-width + artwork-related-content-smaller-width + (layout-side-margin * 2)))
    .artwork-related-content
      display none

.artwork-overview
.artwork-detail
.artwork-related-content
  display table-cell
  vertical-align top

.artwork-related-content
.artwork-detail
  width artwork-detail-width
  // margin-bottom 20px
.artwork-detail
  padding-left 20px
.artwork-related-content
  padding-right 20px

.artwork-overview
  text-align center
  prevent-content-shift()

#the-artwork-image
  margin 0 auto
  background-color gray-color
.artwork-additional-images
  margin 20px auto
.artwork-additional-image
  display inline-block
  height 45px
  margin 5px
  border 3px solid white
  background-color gray-color
  vertical-align middle
  transition border-color 0.125s
  > img
    display inline-block
    height 100%
  &.is-active
  &[data-state='active']
    border-color purple-color

.artwork-image-actions
  display inline-block
  position relative
  padding 20px 0 40px

// Below the fold

// Hack around empty state
.artwork-related-information
  padding-top 0
  border-top none !important
#artwork-artist-related-extended
  margin-top 0
  padding-top 20px
  border-top 1px solid gray-lighter-color
  &:empty
    display none

.ari-container
  margin 20px auto
  text-align center
.ari-cell
  display inline-block
  padding 0 40px
  vertical-align top
  text-align left
  font-size 17px
  line-height 1.5
  // The order is important here:
  &:last-child
    border-left 1px solid gray-lighter-color
  &:first-child
    width 66.666%
    border-left none
  &.artwork-related-articles
    width 33.333%

// Bio and related works
.artwork-blurb
.artwork-artist-blurb
  margin 20px 0
  text-align left
  word-wrap break-word
  p
    block-margins(20px)

#artwork-related-show-section
#artist-artworks-section
  display none
  opacity 0
  transition opacity 1s
  &.is-fade-in
    opacity 1

#artist-artworks-section
  .artworks-list
    margin-top 20px
  .artist-link-container
    text-align center
  .faux-underline-hover-large
    display inline-block
    text-align center
    avant-garde()
    font-size 13px
    text-decoration none
    margin-top 20px

.ars-metadata
  position relative
  margin 20px 0
.ars-partner-name
  avant-garde()
  margin-right 5px
.ars-show-name
  text-decoration none
.ars-buttons
  position absolute
  top 0
  right 0
  button
    margin-left 10px

#artwork-below-the-fold-section
  margin 20px auto
  opacity 0
  transition opacity 0.5s
  &[data-state='fade-in']
    opacity 1
  h2 a
    text-decoration none

.monocle-zoom
  width 256px
  height 256px
  position absolute
  pointer-events none
  border-radius 256px
  background-repeat no-repeat
  background-color white
  box-shadow 0 10px 24px rgba(black, 0.12)

.clock-closed
  display none

.about-artwork-section.add-margin-bottom
  margin-bottom 40px

.artwork-image
  position relative

.artwork-video
  margin auto
  height 100%
  width 100%
  position absolute
  top 0
  left 0
  z-index 2
  &:hover .play-button
    background-color purple-color
  iframe
    z-index 1
    position relative

#artwork-buyers-premium-link
  margin-top 10px
  font-weight bold
  font-size 15px
  a
    color currentColor

#artwork-lot-number
  avant-garde()
  font-size 13px
  padding-bottom 5px

@import './deep_zoom'
@import './circle_buttons'
@import './view_in_room'
@import './layered_search'
@import './detail'
@import './related_articles'
@import '../components/contact'
@import '../components/partner_phone_number'
@import '../components/related_navigation'
