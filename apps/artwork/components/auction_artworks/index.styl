@require '../../../../components/artwork_brick'
@require '../../../../components/auction_artwork_brick'
@require '../../../../components/artwork_metadata_stub'

.artwork-auction-artworks
  //

  &__header
    display flex
    align-items center
    justify-content space-between
    margin-bottom gutter

    &__name
      serif('headline')
      > a
        fine-faux-underline()

  .auction-artwork-brick
    width 100%

    &__row
      display flex
      margin-top 20px
      margin-bottom 20px
      width 100%
      height 100%

    .auction__image
      padding-bottom 100%
      height 300px
      background-color rgba(255,255,255, 0.125)

  .artwork-brick__image__img.auction__image__img
    height 100%
    width 100%
    background-size contain
    background-repeat no-repeat
    background-position center
    position absolute

  .artwork-brick.artwork-brick--auction.js-artwork-brick
    flex 1
    max-width calc(33% \- 12px)
    height 500px
    margin-right 20px
    position relative

    &:last-child
      margin-right 0
