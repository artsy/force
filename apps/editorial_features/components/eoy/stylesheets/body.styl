flex-display(justify = space-between, align = center)
  display flex
  justify-content justify
  align-items align

.article-body
  display none
  padding 0 40px
  color black
  background-color white
  width 100vw
  min-height 100vh
  overflow hidden
  &__content
    max-width 1750px
    margin 0 auto
  &--section
    width calc(85vw \- 80px)
    max-width 1250px
    opacity 0
    transition all 1s
    &.active
      opacity 1

  // introduction paragraph
  &__intro
    &-header
      width calc(30vw \+ 1px)
      height 45vh
      margin-bottom 20px
      z-index 1000
      .col
        transition all 1.25s ease-in
        border-right 1px solid
        height 0
      &.active .col
        height 100%
    &-inner
      margin 0 auto
      position relative
      h3
        garamond-size('headline')
        line-height 45px
        margin-left 15vw
        padding 80px 20px
        max-width 55vw
        opacity 0
        transition all 1.25s
      .spacer
        border-top 1px solid
        width 0
        position absolute
        left calc(30vw \- 5px)
        transition all .75s
        &:first-child
          top 0
        &:last-child
          bottom 0
      &.active
        h3
          opacity 1
        .spacer
          width 65vw
          left 15vw

// single page sections
.article-body--section
  padding-bottom 400px
  &__title
    flex-display(flex-end, flex-end)
    h2
      padding 100px 20px
      width 100%
  &__cover-image
    width 100%
    padding 70px 20px
    position relative
    flex-display()
    .image
      width 100%
      img
        height auto
        width 76%
        max-width 100%
        transition all 1s
  &__sub-text
    .image
      position relative
  &__sub-image
    img
      max-width 800px
      width 100%
  .caption
    margin-top 15px
    garamond-size('s-body')
    color gray-color
  .callout
    garamond-size('headline')
  &__text
    padding 70px 20px
    p
      garamond-size('s-headline')
      padding-bottom 40px
      max-width 750px
  video
    max-width 100%
  .video-controls
    position absolute
    top 60px
    left 20px
    bottom 82px
    background rgba(0,0,0,.1)
    right 110px
    &.active
      opacity 0
    .video-play-button
      position absolute
      border-top 20px solid transparent
      border-bottom 20px solid transparent
      border-left 30px solid white
      left calc(50% \- 15px)
      top calc(50% \- 15px)

[data-section='1']
  .article-body--section
    header
      margin-top 200px
    &__title
      width 85%
      justify-content flex-end
    &__cover-image
      border-top 1px solid
      border-bottom 1px solid
      justify-content flex-end
      .spacer
        position absolute
        border-right 1px solid
        top 20px
        left 0
        bottom 0
        height 0
        transition all 4s
      .image
        flex-display(space-between, flex-end)
        flex-direction column
    article
      display flex
      position relative
      margin-top 20px
      flex-direction column
    &__text
      order 2
      border-top 1px solid
      margin-top 20px
      margin-right 20px
      border-bottom 1px solid
      p
        margin 0 auto
    &__sub-text
      order 1
      flex-display(space-between, center)
      .image
        width 60%
        border-right 1px solid
        padding 60px 110px 60px 20px
      .callout
        flex 1
        text-align center
    &__sub-image
      order 3
      padding 70px 20px
      position relative
      .spacer
        border-bottom 1px solid
        position absolute
        bottom 0
        left 0
        right 20px
    .spacer--article
      border-right 1px solid
      position absolute
      right 0
      top 0
      height 0
      transition all 7s
      &.active
        height 100%
    &.active
      header .spacer
        height calc(100% \- 40px)
      header .image
        img
          width 75%

[data-section='2']
  .article-body--section
    margin 0 auto
    &__title h2
      min-width 100%
    &__cover-image
      .image
        img
          width 83%
          margin-right 15%
          margin-left auto
      .spacer
        border-top 1px solid
        position absolute
        width 0
        left 0
        right 20px
        transition all 3s
        margin-right 0
        margin-left auto
        &:first-child
          top 0
        &:nth-child(2)
          bottom 0
        &:nth-child(3)
          right 0
          height 0
          bottom 0
          border-right 1px solid
    &__text
      border-right 1px solid
      p
        margin 0 auto
    &__sub-text
      border-top 1px solid
      border-bottom 1px solid
      margin-top 20px
      padding-top 20px
      display flex
      flex-direction row-reverse
      justify-content space-between
      .image
        padding 30px 20px 40px 0
        width 60%
        img
          max-width 100%
      .spacer
        border-right 1px solid
        width 20%
        margin-bottom 20px
      .callout
        display none
    &.active
      .image
        img
          width 85%
      .spacer
        width calc(100% \- 20px)
        &:nth-child(3)
          width 1px
          height 100%

[data-section='3']
  .article-body--section
    margin-left auto
    margin-right 0
    &__title
      position relative
      overflow hidden
      .spacer
        position absolute
        top 100%
        bottom 0
        right 0
        border-right 1px solid
        transition all 3s
    &__cover-image
      border-bottom 1px solid
      .spacer
        &:nth-child(1)
          top 0
          left 0
          right 0
          border-top 1px solid
          width 0
          position absolute
          transition all 3s
          margin-right 20px
          margin-left auto
    article
      border-right 1px solid
      margin-top 20px
      display flex
      flex-direction column-reverse
    &__text
      border-bottom 1px solid
      margin-bottom -20px
      p
        margin 0 auto
    &__sub-text
      display flex
      border-bottom 1px solid
      margin-right 20px
      padding-left 20px
      padding-bottom 20px
      .image, .callout
        width calc(50% \- 20px)
        padding 70px 20px
        align-self center
        img
          width 100%
        .caption
          display none
      .spacer
        border-right 1px solid
        padding-left 20px
        margin-right 20px
    &.active
      header
        .spacer
          top 0
        img
          width 75%
      .spacer:nth-child(1)
        width calc(100% \- 20px)

[data-section='4']
  .article-body--section
    margin 0 auto
    &__title
      h2
        margin-right 20px
        text-align right
    &__cover-image
      border-top 1px solid
      border-bottom 1px solid
      padding 20px 0
      .image
        padding 50px 20px
        border-right 1px solid
    article
      position relative
    &__text
      display flex
      justify-content flex-end
      border-bottom 1px solid
      flex-direction column
      padding-left calc(15vw \+ 40px)
      padding-right 50px
      align-items flex-end
    &__sub-text
      border-bottom 1px solid
      .spacer
        border-right 10px solid white
        border-left 10px solid white
        position absolute
        left 15%
        top 20px
        bottom 0
        background black
        width 21px
        height 0
        transition all 4s
        &.active
          height calc(100% \- 40px)
      .image
        padding-left calc(20% \+ 100px)
        display flex
        flex-direction column
        align-items flex-end
        padding-top 70px
        padding-bottom 70px
        padding-right 40px
        img
          width 100%
          height auto
      .callout
        display none
    &.active
      .article-body--section__cover-image .image
        img
          width 75%
  .carousel
    .mgr-cell.js-mgr-cell
      width 100%
      height 100%
      display flex
      align-items center
      min-height 600px
    &.mgr-horizontal-nav
      width 100%
      .mgr-navigation
        opacity 1

[data-section='5']
  .article-body--section
    margin-left 0
    &__title
      h2
        border-right 1px solid
    &__cover-image
      border-right 1px solid
      padding 0
      .image
        border-top 1px solid
        border-bottom 1px solid
        margin-right 20px
        padding 70px 20px
    &.active .image
      img
        width 75%
    &__text
      border-left 1px solid
      margin 20px 0
      p
        margin-right 0
        margin-left auto
    &__sub-text
      display flex
      border-top 1px solid
      padding 20px 0
      .image
        width 50%
        order 3
        margin-left 20px
        padding 40px 20px 60px
        border-bottom 1px solid
        img, .caption
          max-width 75%
          margin-left auto
          margin-right 0
      .spacer
        order 2
        border-right 1px solid
      .callout
        flex-display()
        width 50%
        margin-right 20px
        order 1
        border-bottom 1px solid
        p
          border-left 1px solid
          padding-left 20px
          garamond-size('l-headline')

[data-section='6']
  .article-body--section
    margin 0 auto
    header
      position relative
      overflow hidden
      .spacer--article
        border-right 1px solid
        position absolute
        left 0
        top 0
        height 0
        transition all 7s
    &.active .spacer--article
      height 100%
    &__title
      h2
        margin-left 20px
        border-bottom 1px solid
        padding-left calc(\(100vw \- 80px\) \/ 6)
    &__cover-image
      padding 0 20px 0 0
      .image
        margin-left 20px
        border-bottom 1px solid
        flex-display(space-between, flex-end)
        flex-direction column
        padding 70px 0
    &__text
      border-right 1px solid
    &__sub-text
      margin-top 20px
      padding-top 20px
      border-top 1px solid
      display flex
      .image
        width calc(60% \- 20px)
        border-bottom 1px solid
        padding 70px 0
        img
          max-width 100%
          max-height 700px
          width auto
          height auto
      .callout
        width calc(40% \- 20px)
        border-bottom 1px solid
        flex-display(center, center)
      .spacer
        border-right 1px solid
        margin-right 20px
        padding-right 20px
    &.active
      .article-body--section__cover-image .image
        img
          width 75%

[data-section='7']
  .article-body--section
    margin-right 0
    margin-left auto
    &__title
      h2
        border-right 1px solid
        padding-right 20px
        text-align center
    &__cover-image
      padding-bottom 0
      padding-left 0
      padding-top 0
      border-right 1px solid
      .image
        border-top 1px solid
        border-bottom 1px solid
        width calc(100% \- 20px)
        padding 50px 20px
    &__text
      border-right 1px solid
      margin-bottom 20px
    &__sub-text
      border-top 1px solid
      display flex
      border-bottom 1px solid
      .image
        padding 70px 20px
        width 75%
        border-right 1px solid
        margin 20px 0
        img
          width 75%
      .callout
        display none
    &.active
      .article-body--section__cover-image .image
        img
          width 75%

[data-section='8']
  .article-body--section
    margin 0 auto

[data-section='9']
  .article-body--section
    margin-left 0
    margin-right auto

[data-section='10']
  .article-body--section
    margin 0 auto

@media screen and (max-width: 550px)
  .article-body
    padding 0 10px
  .article-body__intro-inner
    width 100%
  .article-body--section
    width 100%