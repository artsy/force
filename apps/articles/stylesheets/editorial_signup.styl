// Editorial Signup
.articles-es-cta
  position relative
  display flex
  align-items center
  flex-direction column
  height 380px
  width 100vw
  background-color black
  color white
  &.is-article-page
    margin-bottom 100px
  &__container, &__social
    width 1250px
    margin auto
    padding-left 200px
    z-index 5
  &__container
    h2
      garamond-size('l-headline')
      margin-bottom 40px
      width 500px
    h3
      avant-garde-size('body')
      margin-bottom 20px
  &__form
    > button
      padding 10px
      height 30px
      width 90px
      border-radius 2px
      background-color black
      left -100px
      avant-garde-size('s-headline')
      line-height 1em
    > input
      background-color white
      border none
      width 617px
      height 50px
  &__social
    display none
    h2
      garamond-size('s-headline')
      margin-bottom 20px
  &__social-item
    display flex
    align-items center
    padding-left 46px
    background-color transparent
    width 240px
    height 50px
    text-align center
    color white
    border 1px solid white
    border-bottom none
    avant-garde-size('body')
    text-decoration none
    &:last-of-type
      border-bottom 1px solid white
    i
      color white
    i.icon-instagram
      font-size 20px
      width 25px
      margin-right 30px
    i.icon-snapchat svg
      fill white
      width 25px
      padding-bottom 5px
      margin-right 30px
    i.icon-twitter
      font-size 35px
      margin-left -5px
      margin-right 25px
    i.icon-facebook
      margin-left -5px
      margin-right 25px
    &:hover
      transition background-color 0.25s
      background-color white
      color black
      i
        color black
      i.icon-snapchat svg
        fill black
  &__facebook-subscribe
    margin-top 15px
    a
      color white
      font-color white
      text-decoration none
      avant-garde-size('s-headline')
      border-bottom 1px solid white
  &__background
    width 1250px
    li
      width 1250px
      height 380px
      position absolute
      background-size cover
      background center center no-repeat
  &__background-cover
    z-index 4
    height 380px
    width 1250px
    left 0
    right 0
    margin auto
    position absolute
    background-image linear-gradient(to right, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 65%, rgba(0,0,0,1) 100%)

#js--mail-hint, .js-suggestion a
  color white
