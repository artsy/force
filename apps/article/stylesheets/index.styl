#articles-body-container
  position relative

.articles-promoted
  display flex
  justify-content space-between
  padding 20px 0
  border-bottom 1px solid gray-lighter-color
  margin auto
  margin -67px auto 45px auto
  &__left, &__right
    display flex
  &__img
    width 100px
    height 66px
    margin-right 20px
  &__text
    display flex
    flex-direction column
    justify-content space-around
  &__title
    avant-garde-size('s-headline')
  &__name
    garamond-size('s-headline')
  &__explore
    height 45px
    margin auto

.articles-featured-articles
  margin gutter-size auto
  padding 20px 0
  border-bottom 1px solid gray-lighter-color
  h4
    avant-garde()
    font-size 13px
    border-bottom 1px solid gray-lighter-color
    padding-bottom 5px
    margin-bottom 20px
  li
    border-right 1px solid gray-lighter-color
    &:last-child
      border 0
    img
      width 70px
      height 70px
      margin-right 20px
    p
      font-size 20px
      line-height 1.2em
      width calc(100% \- 90px)
    img, p
      display inline-block
      vertical-align middle
  &.article-related-widget
    margin-bottom 100px
