@require '../../../components/stylus_lib'

#articles-show
  margin-top 120px
  &.is-loading
    #article-loading
      display block

#article-loading
  display none
  margin-bottom 100px
  .loading-spinner
    position relative

.body-welcome-header #articles-show
  margin-top 180px

