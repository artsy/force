.artist-header
  position relative
  text-align center
  padding 40px 0 20px
  h1
    font-size 24px
  h1
  h2
    margin 10px 0
  a
    text-decoration none

.artist-header-meta-sep
  margin 0 0.5em
.artist-header-follow-count
  color gray-darkest-color

.artist-header-empty
  margin 20px 0

.artist-blurb
  p > a
    text-decoration underline

.artist-works-sort
  text-align right
  *
    text-align left
  &:hover > .bordered-pulldown-options
    display block
    border-color gray-color
  .bordered-pulldown
    width 170px

.artist-share
  position absolute
  top 40px
  right 0
  text-align right
  > a
    display inline-block
    line-height 0
    vertical-align bottom
    // Tooltips
    &::after
      garamond()
      text-decoration none
      font-size 16px
      line-height 1
      font-weight normal
      text-transform none

.has-carousel
  .artist-share
    right 40px

.artist-tabs
  margin 30px 0
