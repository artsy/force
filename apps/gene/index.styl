@import '../../components/stylus_lib'

#gene-header
  padding-top 40px
  text-align center
  position relative
  h1
    font-size large-avant-garde-font-size
    margin 10px 0
  .follow-button
    display inline-block
    margin 10px 0

.gene-blurb > .blurb
  // Removed when dotdotdot initializes
  max-height (26px * 7)
  p
    block-margins(26px)

#gene-share-buttons
  float right
  position absolute
  top 42px
  right 0
  .icon-pinterest
    display none

#gene-tabs
  text-align center
  margin 20px 0

#gene-artists
  position relative
  min-height 400px
  margin-bottom 100px

#gene-filter
  margin-top 30px

#gene-filter-nav
  margin-bottom 40px
  padding-top 20px
  text-align center
  border-top 1px solid gray-lighter-color

.filter-fixed-header #gene-filter-nav
  margin 0
  padding 15px 0
  border-bottom 1px solid gray-lighter-color
  border-top 0

#gene-artworks
  display none

#gene-filter[data-state='artworks']
  #gene-artworks
    display block
  #gene-artists
    display none

#gene-filter[data-state='artists']
  #gene-filter-artworks-nav
    .filter-button, .filter-dropdown
      &.is-active
        color black
