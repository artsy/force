- imgUrl = auction.get('cover_image') ? auction.get('cover_image').cropped.url : ''
if auction.isLiveOpen()
  .auction2-banner.auction2-banner-live-open
    .auction2-banner-live-bg(
      style='background-image: url("' + imgUrl + '")'
      alt= auction.get('name')
    )
    .auction2-banner-live-details
      h1 Live Bidding Now Open
      a.avant-garde-button-white(
        href="#{sd.PREDICTION_URL}/#{auction.get('id')}#{user ? '/login' : ''}"
        target='_blank'
      ) Enter live auction
else
  .auction2-banner
    .auction2-banner-live-bg(
      style='background-image: url("' + imgUrl + '")'
      alt= auction.get('name')
    )
      .auction2-clock.white-overlay-clock.js-auction-clock
        include ../../../components/clock/template
