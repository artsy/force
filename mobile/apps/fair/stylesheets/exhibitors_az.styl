@import '../../../components/stylus_lib'

//
// The A-Z page of exhibitors at a fair.
//


#fair-page-az-list
  position relative
  line-height 1.8em
  padding 20px 0

  h2
    font-size 30px
    margin 10px 0
  a
    text-decoration none

  .avant-garde-header-center.fair-page-az-header
    padding-bottom: 80px

.avant-garde-header-center.fair-page-az-header
  font-size 18px
  margin 30px 0

.fair-page-subheader
  position relative
  .a-z-feed-toggle-container
    top -15px
  .a-z-page-toggle
    serif()
    text-transform none
    letter-spacing 0px
    text-decoration underline
    display block
    opacity 1
    font-size 14px
  .a-z-page-toggle.is-active
    display none

