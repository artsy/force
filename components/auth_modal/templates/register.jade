#auth-page.vam-outer
  .vam-inner
    include ./_header
      aside
        = copy.get('register') || 'Enter your name, email and password to join'

    section#auth-body
      .auth-register
        form.auth-form
          .auth-errors
          input.bordered-input.is-block(
            name='name', type='text', placeholder='Full Name', required, autofocus= autofocus
          )
          input.bordered-input.is-block(
            name='email', type='email', placeholder='Email', required
          )
          input.bordered-input.is-block(
            name= 'password'
            type= 'password'
            placeholder= 'Password'
            autocomplete= 'on'
            pattern= '.{6,}'
            title= '6 characters minimum'
            required
          )
          button#auth-submit.avant-garde-button-black.is-block Join Artsy

    include ./_signup_footer
