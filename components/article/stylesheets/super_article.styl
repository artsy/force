@require '../../stylus_lib'

.article-sa-footer
  max-width 1250px
  margin auto
  margin-bottom 100px
  display flex
  flex-direction row
  .article-sa-title
    garamond-size('xl-headline')
    display block
    font-style normal

.article-sa-footer-left, .article-sa-footer-right
  border-top 1px solid gray-lighter-color
  min-height 300px

.article-sa-footer-left
  width 55%
  margin-right 30px
  padding 60px 0 30px 0
  border-bottom 1px solid gray-lighter-color

.article-sa-footer-right
  width 45%
  margin-left 30px

.article-sa-title
  font-size 72px
  line-height 106%
  font-style italic
  text-decoration none

.article-sa-artsy-logo
  width 94px
  max-height 32px
  display inline-block
  vertical-align middle

.article-sa-primary-logos
  display flex
  align-items center

.article-sa-logos
  position absolute
  bottom 30px
  &__container
    display flex
    align-items center
  &__presented
    avant-garde-size('s-headline')
    text-transform none
    margin-bottom 10px

.article-sa-primary-logo, .article-sa-secondary-logo
  vertical-align top
  img
    height 32px

.article-sa-plus
  transform rotate(45deg)
  margin 10px
  font-size 17px
  font-smoothing antialiased

.article-fullscreen
  .article-sa-plus-container
    margin-left 20px
  .article-sa-plus, .article-sa-primary-logo
    display inline-block
  .article-sa-plus
    color white
    font-size 20px
    margin 0px
  .article-sa-primary-logo
    margin-left 20px

.article-sa-cta-container
  margin-top 20px

.article-sa-cta
  margin-top 20px
  text-decoration none

.article-sa-footer-blurb
  margin-top 20px
.article-sa-cta-container, .article-sa-footer-blurb
  garamond-size('l-body')

.article-sa-related
  width 100%
  display flex
  align-items center
  justify-content flex-start
  padding 20px
  border-bottom 1px solid gray-lighter-color
  text-decoration none
  transition background-color 0.3s
  &:hover
    background #f8
  img
    width 100px
    height 66px
  &__title
    garamond-size('l-body')
    margin-left 20px

// Sticky header
.article-sa-sticky-header
  position fixed
  top 0px
  left 0px
  width 100%
  z-index zindex-primary-nav + 1
  background white
  opacity 0
  transition all 400ms
  min-height 80px
  pointer-events none
  &.no-transition
    transition all 0ms
  &.visible
    pointer-events all
    opacity 1
    transition all 200ms
  .article-sa-plus
    font-size 15px
    display none

.article-content
  transition all 300ms

.article-sa-sticky-left, .article-sa-sticky-right
  position absolute
  display flex
  align-items center
  top 24px

.article-sa-sticky-left
  left 20px

.article-sa-sticky-right
  right 20px
  top 25px
  .article-sticky-back
    text-decoration none

.article-sa-sticky-center
  text-align center
  margin-top 25px
  .article-sa-sticky-title
    garamond-size('s-headline')
    cursor pointer
    transition all 300ms
    text-decoration none
    &:hover
      color purple-color

.article-sa-sticky-related-container
  border-top 1px solid gray-lighter-color
  max-height 0px
  transition max-height 300ms
  margin-top 25px
  overflow hidden
  &.visible
    border-bottom 1px solid gray-lighter-color
    border-left 1px solid gray-lighter-color
  .mgr-cells
    margin 0 25px
  .mgr-cell
    width 400px
    margin-right 0px
  .mgr-navigation
    opacity 1
    .mgr-arrow-icon
      font-size 12px
      padding 5px
    .mgr-arrow-left, .mgr-arrow-right
      width 25px
      &:hover
        background-color #f8
    .mgr-arrow-left
      left 0px
    .mgr-arrow-right
      left unset
      right 0px

  .article-sa-related
    height 100%
    border-right 1px solid gray-lighter-color
    border-bottom none
    &__title
      white-space normal
      text-align left

.article-sa-sticky
  &__presented
    garamond-size('m-caption')
    display inline-block

// Mobile
.article-sa-footer
  @media screen and (max-width: 900px)
    flex-direction column-reverse
    .article-sa-footer-left, .article-sa-footer-right
      width 100%
      margin 0px
    .article-sa-footer-left
      border-top none
    .article-sa-cta-container
      margin-bottom 180px
  @media screen and (max-width: 550px)
    .article-sa-footer-left
      padding-top 30px
      .article-sa-title
        garamond-size('headline')
      .article-sa-footer-blurb, .article-sa-cta
        garamond-size('s-body')
    .article-sa-related
      padding-left 0px
      &__title
        garamond-size('s-body')

.article-sa-sticky-header
  @media screen and (max-width: 550px)
    .article-sa-related__title
      garamond-size('s-body')
  @media screen and (max-width: 900px)
    .article-sa-plus
      display inline-block
      margin 0px
    .article-sa-sticky__presented
      display none
    .article-sa-sticky-title
      visibility hidden
    .article-sa-sticky-right
      left 130px
      right unset
    .article-sa-sticky-related-container
      .mgr-navigation
        display none
      .mgr-cells
        margin 0px
      .mgr-cell
        width 100%
        display block
    .article-sa-primary-logo
      margin-left 10px
    .article-sa-sticky-hamburger
      position absolute
      top 25px
      right 25px
      &-icon
        vertical-align middle
        position relative
        font-style normal
        color black
        text-align left
        text-indent -9999px
        direction ltr
        width 20px
        height 4px
        box-shadow inset 0 0 0 7px,0 -7px,0 7px
        margin 16px 7px
