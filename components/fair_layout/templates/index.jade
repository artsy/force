block locals
doctype html
html( data-useragent=userAgent )
  head
    include head
    link( type='text/css', rel='stylesheet', href=asset('/assets/fair.css') )
    if assetPackage
      link( type='text/css', rel='stylesheet', href=asset("/assets/#{assetPackage}.css") )
  body
    include ../../modal/template
    include ../../flash/template
    include ./header
    block coverImage
      .fair-layout-cover-image-spacer
    .fair-layout-container
      block nav
        include nav
      block body
    include ../../main_layout/footer/template
    #scripts
      include ../../main_layout/templates/scripts
      script( src=asset('/assets/fair.js') )
      if assetPackage
        script( src=asset("/assets/#{assetPackage}.js") )
