@require '../../../components/stylus_lib'

mlf-upper-column-aside-width = 28%
mlf-upper-column-width = ((100% - mlf-upper-column-aside-width) / 4)

#main-layout-footer
  padding 20px 0
  background-color white
  clearfix()
.mlf
  .mlf-upper
    margin-bottom 10px

  .mlf-upper
  .mlf-lower
    clearfix()
    padding 20px 0
    border-top 1px solid gray-lighter-color

  // Upper
  .mlf-upper-column
  .mlf-upper-column-aside
    float left
    line-height 1.7
    padding-right 20px
    a
      display block
      overflow ellipsis
  .mlf-upper-column-aside
    width mlf-upper-column-aside-width
    display flex
    justify-content flex-end
    padding-right 10px
    h4
      font-weight bold
      block-margins(5px)
  .mlf-upper-column
    width mlf-upper-column-width
    h4
      avant-garde()
      font-size 13px
      margin-bottom 5px
    a
      text-decoration none

  @media screen and (max-width: 1024px)
    mlf-upper-column-aside-width = 25%
    .mlf-upper-column-aside
      width mlf-upper-column-aside-width
    .mlf-upper-column
      width mlf-upper-column-width

  // Lower
  #main-layout-footer-internal
    float left
    a
    span
      display inline-block
      margin 0 7px
      vertical-align middle
      text-decoration none
      &:first-child
        margin-left 0
      &:last-child
        margin-right 0

  #main-layout-footer-logo
    display inline-block
    font-size 30px
    margin-right 20px

  #main-layout-footer-external
    float right
    display flex

  .mlf-social
    display inline-block

  .mlf-social.icon-instagram
    font-size 20px
    vertical-align top

  .mlf-social.icon-snapchat
    width 20px
    margin-top -4px
    margin-right 15px
    margin-left 5px
    height 20px

.mlf__mobile
  background-color black
  width 100vw
  color white
  display none
  a
    color white
    text-decoration none
  h4
    avant-garde-size('m-headline')
    margin-bottom 10px
  .mlf-upper-column, .mlf-user-column
    padding 20px
    width 100vw
    garamond-size('l-body')
    float none
    a
      width 50%
      display inline-block
  .mlf-upper-column a:nth-child(even),
  .mlf-user-column a:nth-child(odd)
      margin-left 15px
      width calc(50% \- 15px)
  .mlf-user-column
    border-top 1px solid gray-darkest-color
  .mlf-login-signup
    width 100vw
    display flex
    justify-content space-between
    a
      text-align center
      width calc(50% \- 15px)
      &:first-child
        margin-left 10px
      &:last-child
        margin-right 10px
  .mlf-lower
     border none
     padding 30px 20px
     garamond-size('l-caption')

@media (max-width: 600px)
  #main-layout-footer
    padding 0
  .body-responsive #main-layout-footer
    display none
  .mlf.mlf__fullwidth
    display none
  .mlf.mlf__mobile
    display block