footer#main-layout-footer
  #recently-viewed-artworks
  include mobile_footer_menu
  .responsive-layout-container: .mlf.mlf__fullwidth
    .mlf-upper: .main-layout-container
      .mlf-upper-column
        h4 Collecting
        a.mlf-collector-faq( href='/#' ) Buying from Galleries FAQ
        a.mlf-auction-faq( href='/#' ) Buying from Auctions FAQ
        a( href='/consign' ) Consign with Artsy
        a( href='/professional-buyer' ) Artsy for Professional Buyers
      .mlf-upper-column
        h4 Education
        a( href='/artsy-education' ) Education
        a( href='/about/the-art-genome-project' ) The Art Genome Project
      .mlf-upper-column
        h4 About Artsy
        a( href='/about' ) About
        a( href='/about/jobs' ) Jobs
        a( href='http://artsy.github.com/open-source/', target='_blank' ) Open Source
        a( href='/about/press' ) Press
      .mlf-upper-column
        h4 Partnering with Artsy
        a( href='/gallery-partnerships' ) Artsy for Galleries
        a( href='/institution-partnerships' ) Artsy for Museums
        a( href='/auction-partnerships' ) Artsy for Auctions
      .mlf-upper-column-aside
        div
          h4 General questions & feedback?
          a( href='/contact' ) Contact Artsy
          a.mlf-feedback( href='#' ) Send us feedback
    .mlf-lower: .main-layout-container
      nav#main-layout-footer-internal
        a#main-layout-footer-logo.icon-logo( href='/' )
        span.mlf-links
          span &copy; #{(new Date).getFullYear()} Artsy
          a( href='/terms' ) Terms of Use
          a( href='/privacy' ) Privacy Policy
          a( href='/security' ) Security
      nav#main-layout-footer-external
        a.mlf-social.icon-twitter( href='http://twitter.com/artsy', target='_blank')
        a.mlf-social.icon-facebook-f( href='http://www.facebook.com/artsy', target='_blank')
        a.mlf-social.icon-snapchat( href="http://snapchat.com/add/artsy.net" target='_blank')
          include ../public/icons/snapchat.svg
        a.mlf-social.icon-instagram( href='http://www.instagram.com/artsy', target='_blank')