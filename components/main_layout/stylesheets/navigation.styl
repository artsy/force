.garamond-tablist
  text-transform uppercase
  letter-spacing 2px
  white-space nowrap

.garamond-tab
  position relative
  text-decoration none
  border-bottom 1px solid transparent
  transition border-bottom-color 0.125s
  &:hover
  &:focus
    border-bottom-color black
  &.is-active
    color purple-color
    border-bottom-color purple-light-color

.garamond-tab-separator
  display inline-block
  margin 0 15px -2px 15px
  width 1px
  height 0.9em
  vertical-align baseline
  transform rotate(30deg)
  background-color gray-darker-color

.contextual-return-link
  display block
  avant-garde()
  font-size 13px
  text-decoration none
  > .icon-chevron-small-left
    font-size 16px
    margin-right 5px
    vertical-align -2px
    line-height 0

.avant-garde-jump-link
  display block
  avant-garde()
  text-decoration none
  font-size 15px
  > .icon-chevron-small-right
    font-size 19px
    line-height 0
    margin-left 5px
    vertical-align -3px
    color gray-color
    transition color 0.25s
  &:hover > .icon-chevron-small-right
    color black

// Hoverable images
.hoverable-image-link
  position relative
  display inline-block
  &:after
    content ''
    display block
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background-color black
    opacity 0
    transition opacity 0.33s
  &:hover:after
    opacity 0.5

.hoverable-image-link > img
.hoverable-image
  width 100%
  &.is-three-two
  &.is-four-three
    line-height 0
    background-size cover
    background-position center center
  &.is-three-two
    padding-bottom 66.67%
  &.is-four-three
    padding-bottom 75%
