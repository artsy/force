// Filter Section
#artwork-filter-left
  h2
  h3
    margin 5px 0
.artwork-filter-criteria
  h2
    garamond-size('headline')
    margin-bottom 20px
  h3
    avant-garde()
    font-size small-avant-garde-size
  section
    margin 20px 0
  &__for-sale
  &__criterion
    display flex
    line-height 1.6
  &__for-sale
    margin 0
    &.is-disabled
      cursor arrow
      pointer-events none
      .artwork-filter-label
        color gray-dark-color

  &__criterion
    font-size 18px
    text-decoration none
    transition color 0.25s
    .artwork-filter-select
      text-decoration none
    .artwork-filter-remove
      margin-left 0.25em
      color purple-color
      text-decoration underline
    &:hover .artwork-filter-select
      color gray-darker-color
    &.is-active .artwork-filter-select
      color purple-color
    &.is-disabled .artwork-filter-select
      cursor arrow
      pointer-events none
      color gray-dark-color

  .artwork-filter-label
    overflow ellipsis
  .artwork-filter-count
    margin-left 0.25em
    color gray-darker-color