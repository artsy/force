@require '../stylus_lib'

small-avant-garde-size = 11px
sidebar-width = 26%

// Flex container

#artwork-filter
  min-height 500px
  display flex
  flex-direction row
  clearfix()
  &__left
  // &__right .artwork-section__artworks
    transition opacity 0.25s
    &[data-state='loading']
      opacity 0.5
      pointer-events none

  &__left
    max-width 26%
    flex-basis sidebar-width
    padding-right 40px
    section
      margin 20px 0
    h2
    h3
      margin 5px 0
    h2
      garamond-size('headline')
      margin-bottom 20px
    h3
      avant-garde()
      font-size small-avant-garde-size

  &__right
    flex-basis (100% - sidebar-width)
