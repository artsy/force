nColumns = 3
margin = 40px
totalMargins = margin * (nColumns - 1)

.artwork-columns
  margin-bottom 80px
  white-space nowrap

.artwork-column
  display inline-block
  margin-right margin
  vertical-align top
  width calc('(100% - %s) / %s' % totalMargins nColumns)
  &:last-child
    margin-right 0
  .artwork-item
    margin 0
    margin-bottom 40px
    &:last-child
      margin-bottom 0
  .overlay-container
    bottom 12px

.artwork-column-artist-list-heading
  avant-garde()

.artwork-column-artist-list
  display inline-block
  vertical-align top
