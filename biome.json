{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/src/__generated__/**/*",
      "!**/.cache/**/*",
      "!**/dist/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "includes": [
      "**",
      "!**/__generated__",
      "!**/hokusai/**/*.yml",
      "!**/.cache/**/*",
      "!**/dist/**/*"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noEmptyPattern": "off",
        "noSwitchDeclarations": "off",
        "noUnreachable": "off",
        "noUnsafeOptionalChaining": "off",
        "noUnusedFunctionParameters": "off",
        "noUnusedImports": "off",
        "noUnusedVariables": "off",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "off",
        "useJsxKeyInIterable": "off",
        "useParseIntRadix": "off"
      },
      "complexity": {
        "noArguments": "off",
        "noBannedTypes": "off",
        "noExcessiveNestedTestSuites": "off",
        "noExtraBooleanCast": "off",
        "noForEach": "off",
        "noUselessCatch": "off",
        "noUselessEscapeInRegex": "off",
        "noUselessFragments": "off",
        "noUselessSwitchCase": "off",
        "noUselessTernary": "off",
        "noUselessUndefinedInitialization": "off",
        "useDateNow": "off",
        "useLiteralKeys": "off",
        "useOptionalChain": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off",
        "noDelete": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "lodash": "Avoid importing the entire lodash library for bundle size reasons. Use per-method imports instead, e.g. `import debounce from 'lodash/debounce'`."
            }
          }
        },
        "noUselessElse": "off",
        "useConst": "off",
        "useExponentiationOperator": "off",
        "useImportType": "off",
        "useNodejsImportProtocol": "off",
        "useTemplate": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "off",
        "noAsyncPromiseExecutor": "off",
        "noConfusingVoidType": "off",
        "noDoubleEquals": "off",
        "noDuplicateTestHooks": "off",
        "noExplicitAny": "off",
        "noGlobalAssign": "off",
        "noGlobalIsNan": "off",
        "noImplicitAnyLet": "off",
        "noNonNullAssertedOptionalChain": "off",
        "noPrototypeBuiltins": "off",
        "noShadowRestrictedNames": "off",
        "noTemplateCurlyInString": "off",
        "noThenProperty": "off",
        "noTsIgnore": "off",
        "useIterableCallbackReturn": "off"
      },
      "a11y": {
        "noStaticElementInteractions": "off",
        "noSvgWithoutTitle": "off",
        "useAltText": "off",
        "useButtonType": "off",
        "useKeyWithClickEvents": "off",
        "useValidAnchor": "off"
      }
    },
    "includes": [
      "**",
      "!**/src/__generated__/**/*",
      "!**/.cache/**/*",
      "!**/dist/**/*"
    ]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "bracketSameLine": false,
      "quoteStyle": "double",
      "attributePosition": "auto",
      "bracketSpacing": true
    }
  },
  "overrides": [
    { "includes": ["**/*.cy.js", "**/*.cy.ts"], "linter": { "rules": {} } },
    {
      "includes": ["**/webpack/**/*"],
      "linter": { "rules": { "suspicious": { "noConsole": "off" } } }
    },
    {
      "includes": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.jest.ts",
        "**/*.jest.tsx"
      ],
      "linter": { "rules": { "style": { "noNonNullAssertion": "off" } } }
    }
  ]
}
