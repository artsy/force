//
// Styles for the main header at the top of almost every page.
//

@import '../../stylus_lib'

logo-size = 34px
header-height = 54px

#main-header
  height header-height
  position relative
  z-index: 2
.main-header-nav
  position relative
  background-color white
  border-bottom 1px solid light-gray-border-color

#main-header-search-box
  padding 18px 80px 14px 70px
  border 0
  margin 0
  background transparent
  width 100%

#main-header-logo
  padding 10px
  position absolute
  border-right 1px solid light-gray-border-color
  z-index 1

#main-header-menu
  padding 9px
  position absolute
  right 0
  top 0
  border-left 1px solid light-gray-border-color
  z-index 1
  -webkit-tap-highlight-color rgba(0,0,0,0)

#main-header-logo-icon
  background no-repeat center center
  background-size contain
  width logo-size
  height logo-size

#main-header-menu-icon
  display inline-block
  vertical-align middle
  position relative
  font-style normal
  color #000
  text-align left
  text-indent -9999px
  direction ltr
  width 20px
  height 4px
  box-shadow inset 0 0 0 7px,0 -7px,0 7px
  margin 16px 7px

#main-header form
  position relative

#main-header-search-box-cancel
  background #bbb
  color white
  border-radius 10px
  font-size 15px
  padding 2px 4px 6px 4px
  position absolute
  right 13px
  top 21px
  font-family Helvetica
  font-weight bold
  line-height 8px
  border none
  font-smoothing antialiased

#main-header-search-box::-webkit-search-cancel-button
  display none

#main-header-search-button
  position absolute
  top 0
  right 0
  width 100px
  height 100%
  border-top 0
  border-bottom 0
  line-height logo-size

#main-header-search-button
  display none
