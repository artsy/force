.artwork-display
  if artwork.title
    em= artwork.title
  if artwork.date
    | , #{artwork.date}

.artwork-meta-data__details
  if artwork.medium
    .artwork-meta-data__details__medium= artwork.medium

  unless artwork.edition_sets && artwork.edition_sets.length > 1
    if artwork.dimensions.in || artwork.dimensions.cm
      p.artwork-meta-data__details__dimensions
      = [artwork.dimensions.in, artwork.dimensions.cm].join('; ')

  if artwork.edition_of
    p.artwork-meta-data__details__edition-of= artwork.edition_of
