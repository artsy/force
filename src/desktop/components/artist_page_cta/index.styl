@require '../stylus_lib'

.payoff-content
  &__header
    text-align center
    &__headline
      font-size 30px
      padding-bottom 20px
    &__subheadline
      line-height 1.3em
      font-size 20px
  &__content
    padding-top 340px
    clearfix()
    position relative
    left 50%
    width 500px
    transform translate(-50%, -50%)
    .arbv-follow-search-container
      width 100%
  &__done
    position absolute
    left 50%
    top 50%
    margin-top 90px
    transform translate(-50%, -50%)
    width 500px

.artist-page-cta.fullscreen
  height calc(100%)
  width calc(100%)
  cursor auto
  .artist-page-cta-overlay
    &__center
      transform translate(-50%, -50%)

.artist-page-cta-overlay__center
.artist-page-cta
  transition all, 300ms, ease

.artist-page-cta
  &.initial
    bottom -100px
  cursor pointer
  position fixed
  right 0
  bottom 0
  left 0
  height 100px
  width calc(100%)
  background-color white
  transform translateY(0%)
  z-index 999
  border-top 2px solid purple-color
  .main-layout-container
    align-items center
    margin-top 20px
    display flex
  &__image
    flex 0 0 60px
    width 60px
    height @width
    border-radius 60px
    margin-right 15px
  &__headline
    flex-grow 1
    flex-shrink 1
    font-size 20px
    margin-right 15px
    &__artist-name
      font-weight bold
  button
    flex-grow 0
    flex-shrink 0
    width 160px

.artist-page-cta-banner
  display block

.artist-page-cta-overlay
  display none
  &__center
    width 710px
    position fixed
    left 50%
    top 50%
    transform translate(-50%, 0)
  &__content
    clearfix()
  &__headline
    text-align center
    font-size 40px
    line-height 1.3em
    &__artist-name
      font-weight bold
  &__feed
    display inline-block
    margin-top 50px
    margin-left 85px
    svg
      fill black
      width 35px
      height 35px
      vertical-align middle
    &__pulldown
      span
        font-size 15px
      avant-garde()
      font-size 16px
      vertical-align middle
      cursor auto
      &:after
        left 50%
        font-size 30px
        content 'â–²'
        text-shadow 0px -7px 12px rgba(0,0,0,0.1)
        color white
        z-index 999
        transform scaleY(0.6)
        margin 7px 0 0 0
        border 0
     &__count
      avant-garde()
      font-size 10px
      display inline-block
      background-color red
      border-radius 50px
      width 19px
      height 19px
      position relative
      bottom 10px
      right 20px
      line-height 19px
      color white
      text-align center
    &__items
      box-shadow 0 0 20px 0 rgba(0,0,0,0.1)
      background-color white
      width 340px
      height 200px
      margin-left -150px
      transition none
      &:after
        display block
        position absolute
        content ''
        right -20px
        bottom -20px
        left -20px
        height 125px
        background-image linear-gradient(to bottom, rgba(255,255,255,0), white 100px)
      li
        display inline-block
        border-bottom 1px solid gray-lighter-color
        font-size 13px
        margin-left 20px
        margin-right 20px
        padding-bottom 20px
        &:last-child
          border-bottom none
          margin-top 20px
          padding-bottom 0px
      &__row
        width 300px
        &__image
          vertical-align middle
          display inline
          width 60px
          border-radius 60px
          margin-right 15px
        &__artist-info
          display inline-block
          vertical-align middle
          width 225px
          line-height 1.3em
          &__artist-count
            color gray-darker-color
            display inline-block
            font-size 11px
          &__artist-day
            float right
            font-size 11px
            color gray-darker-color
  &__register
    float right
    width 340px
    margin-top 10px
    .auth-signup-facebook
      background-color #38409E
      width 340px
    button
      margin-bottom 20px
    h2
      width 100%
      text-align center
      border-bottom 1px solid gray-lighter-color
      line-height 0.1em
      margin 10px 0 20px
      span
        avant-garde()
        font-size 11px
        color gray-darker-color
        background #fff
        padding 0 10px
    #auth-footer
      text-align center
      aside
        font-size 13px
        line-height 1.3em
      p
        opacity 0.8
        color gray-darkest-color
  &__close
    position absolute
    right 20px
    top 10px
    font-size 40px
    color gray-color
    cursor pointer

.gdpr-signup .tos-error
  color red-color
  text-align left
  height 1.23em
  margin-bottom 8px
  garamond-size('l-caption')

  .bordered-input
    width 100%
    margin-bottom 10px

  .avant-garde-button-black
    width 100%
