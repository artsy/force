#auth-page.vam-outer
  .vam-inner
    include ./_header

    - action = setPassword ? 'set' : 'reset'

    section#auth-body
      p.auth-reset
        | Please check your email for instructions on how to #{action} your password
      p
        a.faux-underline.auth-toggle.small-caps( href='/log_in', data-mode='login' ) Log in
