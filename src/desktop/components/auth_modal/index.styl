@import './gdpr_signup.styl'
#modal.auth
  .modal-body
    padding 20px
    text-align center

#auth-page
  height 520px
  overflow-y auto

#auth-header
  > aside
    margin 20px
    font-size 26px
    line-height 1.3
  > p
    margin 20px
    font-size 18px

#auth-body
  max-width 350px
  margin 0 auto

.auth-errors
  color red-color
  text-align left
  text-transform capitalize

#auth-header-logo
  margin 0 0 20px 0
  font-size 55px
  line-height 55px

.auth-options
  max-width 100%
  margin 10px auto
  > a
    display block
    width 100%
    margin 10px auto
    > i
      line-height 0
      margin-right 10px
      vertical-align middle

.auth-form
.auth-form > input,
.auth-login-social
  margin 10px 0

.auth-form-options
  margin 20px 0 30px
  clearfix()
  text-align left
  &, & a
    color gray-darker-color
  > a
    float right

.auth-register
  max-width 370px
  margin auto

.auth-reset
  margin 40px 0
  font-size 26px
  line-height 1.3

#auth-footer
  margin-top 20px
  > aside
    font-size 15px
    margin 20px 0 30px
    opacity 0.8
    &, & a
      color gray-darkest-color

hr.horizontal-rule-or
  margin 30px 0
  &::after
    position absolute
    display block
    content 'or'
    @extends .small-caps
    top 0
    left 50%
    width 50px
    height (@width / 2)
    line-height @height
    margin-top -(@height / 2)
    margin-left -(@width / 2)
    text-align center
    background-color #fff

#js-mailcheck-hint-modal
  float right
  margin-bottom 10px
