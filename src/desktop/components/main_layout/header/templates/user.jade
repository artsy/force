.main-layout-header-user
  if user
    span.mlh-user-name.hover-pulldown( data-anchor='right', data-mode='hover' )
      a( href='/user/saves' )
        include ../../public/icons/person.svg

      .hover-pulldown-menu
        if user.isAdmin()
          a( href= sd.ADMIN_URL ) Admin
        if user.isAdmin() || user.get('has_partner_access')
          a( href= sd.CMS_URL ) CMS
        if user.isAdmin() || user.get('has_partner_access')
          hr

        a( href='/user/saves' )
          | Saves &amp; Follows
        a( href='/profile/edit' )
          | Collector Profile
        a( href='/user/edit' )
          | Settings

        a.mlh-logout
          | Log out

  else
    a.avant-garde-button-white.mlh-login( href='/log_in' ) Log in
    a.avant-garde-button-black.mlh-signup( href='/sign_up' ) Sign up
