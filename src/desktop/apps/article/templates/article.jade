extends ../../../components/fair_layout/templates/conditional.jade

block head
  include classic_meta.jade

append locals
  - assetPackage = 'article'
  - bodyClass = bodyClass + ' ' + article.getBodyClass({})

block body

  //- Render channel nav if article is in a team channel
  - var showClass = ''
  if channel && channel.isTeam()
    - showClass = 'is-team-channel'
    include ../../../components/channel_nav/index.jade

  #articles-show(class=showClass)

    //- Article body
    #articles-body-container(role='article')
      include ../../../components/article/templates/index.jade

  section#articles-footer.responsive-layout-container
    //- Rendered on client

  include ../../../components/main_layout/templates/json_ld.jade
