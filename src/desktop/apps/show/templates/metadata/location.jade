.show-location
  if show.has_location
    span= ViewHelpers.singleLine(show.location)
    if show.location.coordinates
      a.show-entity-link.js-open-map-modal
        i.icon-circle-chevron
        span
          | Map #{show.location.day_schedules.length > 0 ? '& Full Hours' : ''}
  else
   span= "Online Exclusive"
