extends ../../../components/main_layout/templates/index.jade
include ../../../components/share/mixin.jade

block head
  include meta.jade

append locals
  - assetPackage = 'partners'

block body
  - hasCarousel = partner_show.install_shots.length >= 3

  if hasCarousel
    section.show-installation-shot-carousel.merry-go-round.js-show-installation-shot-carousel(
      class= ViewHelpers.hasCaptions(partner_show.install_shots) ? 'has-captions' : undefined
    )
      include carousel.jade

  .responsive-layout-container: .main-layout-container
    include header.jade
    include columns.jade
    include footer.jade

  include ../../../components/main_layout/templates/json_ld.jade
