@require '../../../../components/tooltips'
@require '../../../../components/inquiry_questionnaire/stylesheets'
@require '../../../../components/zig_zag_banner'

.purchase-flow
  .artwork-commercial
    .artwork-inquiry-button
      color gray-darker-color
    &__limited-partner-message
    &__sale-message
      border 0px
      padding 0px
      margin 0px

    &__shipping
      margin-top 7px

    &__sale-message, &__shipping
      clearfix()

    &__sale-message-left, &__shipping-left
      float left

    &__sale-message-right, &__shipping-right
      float right
      garamond-size(s-body)

    &__sale-message-right
      font-weight bold

    &__shipping-right
      color gray-darker-color

    &__inquiry-buttons
      margin 15px 0 17px 0
      > button
        margin-top 10px
        &:first-child
          margin-top 0

.artwork-commercial
  clearfix()
  &__form
    serif('s-body')
    border-top 1px solid gray-lighter-color
    margin-top 30px
    padding 25px 0

  &__sale-message
    garamond-size('l-body')
    font-weight bold
    line-height 1.5
    .tooltip-question-container
      display inline-block
      position relative
      top 2px
  &__price-label
    avant-garde-size('s-headline')
    color gray-darker-color
    line-height 1.5
  &__container
    block-margins 25px
    padding 0
  &__shipping-info
    garamond-size('l-caption')
    color gray-darker-color
    line-height 1.5

  &__consignables
    color gray-darker-color
    &__consign
      block-margins(gutter / 2)
      color gray-darker-color
      font-size 15px
      margin-top -((gutter / 2) + 2)
      padding distance(gutter / 2) 0
  
      > a
        color gray-darker-color
        font-size 15px
        text-decoration underline
  
  &__questions
    color gray-darker-color
    font-size 15px
    padding-top 25px
  
    > a
      color gray-darker-color
      font-size 15px
      text-decoration underline

  &__inquiry-success
    color green-color

    > h3
      sans('s-headline')
      margin-bottom 5px

.artwork-inquiry-form
.artwork-acquire-form
  margin (gutter / 2) 0

.fair-attend-checkbox
  display block
  position relative
  .artsy-checkbox--checkbox
    position absolute
  .artsy-checkbox--label
    display inline-block
    margin 0 20px 0 30px
  .tooltip-question-container
    display inline-block
    left 2px
    position relative
    top 4px

// need to adjust borders and spacing for elements following each other
.artwork-inquiry-form + .artwork-partner-stub
.artwork-commercial__inquiry-buttons + .artwork-partner-stub
  padding-top 25px

.artwork-commercial__container + .artwork-partner-stub
  padding-top 25px
  border-top 1px solid gray-lighter-color

.artwork-partner-stub + .artwork-commercial__questions
.artwork-partner-stub + .artwork-commercial__consignables
  border-top 1px solid gray-lighter-color
  margin-top 25px

.artwork-collecting-institution-stub + .artwork-commercial__questions
.artwork-collecting-institution-stub + .artwork-commercial__consignables
  border-top 1px solid gray-lighter-color
  margin 25px 0 0 0

.artwork-edition-sets
  block-margins(gutter / 2)

.artwork-edition-set
  display table
  width 100%
  serif('m-caption')
  padding 5px 0
  border-top 1px dotted gray-lighter-color

  &:first-child
    border-top none

  &__radio
  &__details
  &__price
    display table-cell
    height 100%
    vertical-align top

  &__radio
    text-align center

  &__details
    padding 0 10px

    // When not acquireable, radio button is disabled
    &:first-child
      padding-left 0

  &__price
    text-align right
