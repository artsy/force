if artwork.show && artwork.show.artworks.length
  - var show = artwork.show

  section.artwork-section.artwork-show-artworks( class='js-artwork-show-artworks' )
    header.artwork-show-artworks__header
      h3.artwork-show-artworks__header__name
        | Other Works from the #{show.type}

      a.artwork-show-artworks__header__jump( href= show.href )
        | View All


    if sd.ENABLE_EXPERIMENTAL_STITCH_INJECTION
      #stitch-artwork-show-artworks-masonry
        != sd.stitch.components.ArtworkGrid({ artworks: show.artworks, mountId: 'stitch-artwork-show-artworks-masonry'})
    else
      - var columns = helpers.show_artworks.masonry(show.artworks).columns
      include ../../../../components/artwork_masonry/index

    .artwork-section__jump
      a.avant-garde-jump-link( href='#{artwork.show.href}' )
        | View all #{artwork.show.counts.eligible_artworks} works
        i.icon-chevron-small-right
