extends ../../../components/main_layout/templates/blank

append locals
  - assetPackage = 'gallery_partnerships'

block head
  include meta

block body
  .gallery-partnerships2
    .gallery-partnerships2__header.flex.items-center( style="background-image: url(#{header.image});" )
      a(href="/")
        i.icon-logotype
      .gallery-partnerships2__header__content-container
        .gallery-partnerships2__header__headline.mb3= header.headline
        a.gallery-partnerships2-white-signup-button.js-gallery-partnerships2-button(
          href="#gallery-partnership2-form"
          data-label='Learn More'
          data-section="Banner"
        ) Learn More

    .gallery-partnerships2__intro
      .responsive-layout-container
        .main-layout-container
          .row
            for item in sections[0].intro
              .col-xs-12.col-lg-4.mb5
                img( src=item.image )
                .gallery-partnerships2__intro__headline.mt3.mb2.garamond-s-headline= item.title
                .gallery-partnerships2__intro__subtitle.garamond-l-body= item.subtitle

    .gallery-partnerships2__gallery-logos.bg-gray
      .responsive-layout-container
        .main-layout-container
          .row
            .col-xs-12.col-lg-6
              .row
                .col-lg-4.col-xs-4.flex.justify-center.items-center.gallery-partnerships2__gallery-logos__logo
                  img(src=sections[0].active_partner_images[0])
                .col-lg-4.col-xs-4.flex.justify-center.items-center.gallery-partnerships2__gallery-logos__logo
                  img(src=sections[0].active_partner_images[1])
                .col-lg-4.col-xs-4.flex.justify-center.items-center.gallery-partnerships2__gallery-logos__logo
                  img(src=sections[0].active_partner_images[2])
            .col-xs-12.col-lg-6
              .row
                .col-lg-4.col-xs-4.flex.justify-center.items-center.gallery-partnerships2__gallery-logos__logo
                  img(src=sections[0].active_partner_images[3])
                .col-lg-4.col-xs-4.flex.justify-center.items-center.gallery-partnerships2__gallery-logos__logo
                  img(src=sections[0].active_partner_images[4])
                .col-lg-4.col-xs-4.flex.justify-center.items-center.gallery-partnerships2__gallery-logos__logo
                  img(src=sections[0].active_partner_images[5])

    .gallery-partnerships2__connect-with-collectors
      .responsive-layout-container
        .main-layout-container
          .row.flex-auto.reverse-on-mobile
            .col-xs-12.col-lg-6.flex.justify-center.gallery-partnerships2__connect-with-collectors__notification-container
              .gallery-partnerships2__connect-with-collectors__notification-inner-container.flex-auto.self-end
                img.gallery-partnerships2__connect-with-collectors__image.flex(src=sections[1].background_image)
                .flex.justify-center.items-center.gallery-partnerships2__connect-with-collectors__sub_image_continer
                  img.gallery-partnerships2__connect-with-collectors__sub_image(src=sections[1].notification_image)
            .col-xs-12.col-lg-6.flex.text-center-on-mobile
              .gallery-partnerships2__connect-with-collectors__content_container.flex.flex-auto.justify-center.items-center
                .gallery-partnerships2__connect-with-collectors__content_container__wrapper
                  .gallery-partnerships2__connect-with-collectors__headline= sections[1].title
                  .mb3.garamond-l-body= sections[1].content
                  a.gallery-partnerships2-black-signup-button.gallery-partnerships2__connect-with-collectors__button.js-gallery-partnerships2-button(
                    href="#gallery-partnership2-form"
                    data-label='Learn More'
                    data-section="Connect with the right collectors"
                  ) Learn More

    hr

    .gallery-partnerships2__stats
      .responsive-layout-container
        .main-layout-container
          .row
            .col-xs-12.col-lg-6.flex.items-center.justify-center
              .gallery-partnerships2__stats__inner-container
                .text-center-on-mobile.gallery-partnerships2__stats__headline= sections[2].title
                .garamond-l-body
                 for stat in sections[2].stats
                   .mb2.flex
                     div
                       img.mr2(src=check_mark)
                     div= stat
                .text-center-on-mobile.gallery-partnerships2__stats__button
                  a.gallery-partnerships2-black-signup-button.js-gallery-partnerships2-button(
                    href="#gallery-partnership2-form"
                    data-label='Learn More'
                    data-section="Grow your gallery presense"
                  ) Learn More

            .col-xs-12.col-lg-6.max-width-on-mobile( style="position: relative;" )
              img.gallery-partnerships2__stats__frame( src="http://files.artsy.net/images/macbook-transparent1x.png" )
              section.js-partner-stats-slideshow.gallery-partnerships2__stats__slideshow
                .mgr-cells.js-mgr-cells
                  for image in sections[2].slideshow
                    .mgr-cell.js-mgr-cell
                      img( src= image )

    hr

    .gallery-partnerships2__chat
      .responsive-layout-container
        .main-layout-container
          .row.flex.flex-auto.reverse-on-mobile
            .col-xs-12.col-lg-6.items-center.justify-center.flex
              video.gallery-partnerships2__chat__video(playsinline muted)
                source(src=sections[3].video type="video/mp4")
              img.gallery-partnerships2__chat__fallback_image(src='http://files.artsy.net/images/chat_image2x.png')
            .col-xs-12.col-lg-6.flex.flex-auto.justify-center.items-center.text-center-on-mobile
              .gallery-partnerships2__chat__content-container
                div= sections[3].title
                .gallery-partnerships2__chat__title.garamond-l-body= sections[3].content
                a.gallery-partnerships2__chat__learn_more.gallery-partnerships2-black-signup-button.js-gallery-partnerships2-button(
                  href="#gallery-partnership2-form"
                  data-label='Learn More'
                  data-section="Access everything you need to sell in one place"
                ) Learn More

    hr

    .gallery-partnerships2__folio
      .responsive-layout-container
        .main-layout-container
          .row
            .col-xs-12.col-lg-6
              .flex.justify-center.items-center( style= 'height: 100%' )
                .gallery-partnerships2__folio__inner-container.max-width-on-mobile
                  .mb2.text-center-on-mobile= sections[4].title
                  .gallery-partnerships2__folio__features.garamond-l-body
                    for item in sections[4].folio
                      .mb2.flex
                        div
                          img.mr2(src=check_mark)
                        div= item
                  .text-center-on-mobile
                    a.gallery-partnerships2-black-signup-button.gallery-partnerships2__folio__button.js-gallery-partnerships2-button(
                      href="#gallery-partnership2-form"
                      data-label='Learn More'
                      data-section="Carry your gallery with you"
                    ) Learn More
            .gallery-partnerships2__folio__image-container.col-xs-12.col-lg-6
              img.gallery-partnerships2__folio__image.max-width-on-mobile(src=sections[4].image)

    .gallery-partnerships2__testimonials.bg-gray.flex.items-center.justify-center
      .gallery-partnerships2__testimonials__slideshow
        section.js-partner-testimonials-slideshow( style="position: relative;" )
          .js-mgr-cells.mb5
            for testimonial in sections[4].testimonials
              .js-mgr-cell.gallery-partnerships2__testimonials__slideshow__item
                .mb5
                   | “
                   = testimonial.content
                   | ”
                .gallery-partnerships2__testimonials__slideshow__item__author.garamond-l-body= testimonial.partner

          - index = 0
          nav.mgr-navigation.js-mgr-navigation
            .mgr-dots
              for x, i in sections[4].testimonials
                .mgr-dot.js-mgr-select(
                class= (index === i ? 'is-active' : undefined)
                data-index= i
                ) •

