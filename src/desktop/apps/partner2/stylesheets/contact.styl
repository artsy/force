#partner2-contact
  text-align center
  .partner2-contact-info
    font-size 24px
    line-height 1.5em
    margin-bottom 100px
    .email-gallery, .partner2-website
      color purple-color
      text-decoration none
      &:hover
        text-decoration underline
    .partner2-website
      font-size 18px
    .purchase
      margin-bottom 50px

  .partner2-locations
    .location
      margin-bottom 70px
    .location:last-child
      margin-bottom 20px
    .map
      display inline
      border 2px solid #fff
      transition border-color 0.26s
      &:hover
        border 2px solid #ccc
    .location-details
      font-size 18px
      line-height 1.25em
      margin 1.4em 0
  .partner2-vat-info
    unica()
    color #666666
    font-size 14px
