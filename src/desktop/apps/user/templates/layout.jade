extends ../../../components/main_layout/templates/index.jade

block head
  title Settings | Artsy

append locals
  - assetPackage = 'misc'
  - options = {stripev3: true}

block body
  .settings-page.responsive-layout-container(
    class='js-settings-page'
  )
    .main-layout-container
      header.settings-page__header
        h1.settings-page__header__name
          = user.get('name')

        include ../components/tabs/index.jade

      .settings-page__content
        .settings-page__content__main(
          class='js-settings-page__content__main'
        )
          block main
