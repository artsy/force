.settings-page
  padding 15px 0

  &__header
    &__name
      garamond-size('s-headline')

  &__content
    clearfix()

    &__sections
    &__main
      float left
      padding-top gutter

    &__main
      width 75%

      @media screen and (max-width: 550px)
        width 100%

.settings-page.responsive-layout-container
  margin 20px 0px
  @media screen and (min-width: 941px)
    margin -10px 0px
  @media screen and (min-width: 1192px)
    max-width 1112px
    margin 0px auto

#stitch-settings-tabs
  @media screen and (max-width: 600px)
    margin: 0px -10px


.settings-subnav
  //

.settings-section
  position relative
  width 100%
  block-margins(gutter)
  padding gutter 0 (gutter * 2) 0
  border-top 1px solid gray-lighter-color
  &:first-child
    border-top 0
    padding-top 0

  &__name
    block-margins(gutter)
    garamond-size('s-headline')

  &__main
    //

.settings-disable-link
  color gray-dark-color

.faux-underline-hover-large:hover
  text-decoration underline
  &:before
    display none
