extends ../../../../../components/main_layout/templates/blank.jade

append locals
  - assetPackage = 'editorial_features'
  - section = curation.get('sections')[videoIndex]
  - options = {marketo: false}

block head
  include head.jade

block body
  .venice-feature
    include ./nav.jade

    .venice-header
      .venice-info-icon
        include ../icons/icon_i.svg
      include ./video.jade
      include ./carousel.jade
      .venice-header__overlay

    .venice-body
      include ./body.jade

    .venice-footer
      if curation.get('sub_articles').length > 1
        include ./footer.jade

    .venice-guide
      include ./video_guide.jade

  include ../../../../../components/main_layout/templates/json_ld.jade