doctype html
html
  head
    meta( name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' )
    style
      include:stylus index.styl
  body.error-handler-body
    //- TODO: Be fancier about conditionally rendering the full header:
    //- https://github.com/artsy/force/pull/1217/files#diff-93f2189e436c245b56ccbe66976e06a6R11
    a.error-handler-logo( href='/' )
      include ../main_layout/public/icons/logo.svg

    #main-layout-container.responsive-layout-container.error-handler-layout
      .error-handler-container( data-code=code )
        h1.error-handler-headline
          if code === 404
            | Sorry, the page you were looking for doesnâ€™t exist at this URL.
          else
            | Internal Error

        .error-handler-inner
          if detail && code !== 404
            pre.error-handler-trace
              = detail
          p
            | Please contact
            = ' '
            a.fine-faux-underline( href='mailto:support@artsy.net' )
              | support@artsy.net
            = ' '
            | with any questions.

        .error-handler-return: a( href='/' )
          | Go to Artsy homepage

    .error-handler-footer
      include ../main_layout/footer/template
