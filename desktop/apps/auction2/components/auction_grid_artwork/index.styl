.auction2-grid-artwork
  float left
  width 33.33%
  height 450px
  padding 15px
  text-align left
  margin-bottom 65px
  garamond-size('s-body')
  a
    text-decoration none

.auction2-grid-artwork__image-container
  height 300px

.auction2-grid-artwork__image > img
  max-height 260px
  margin auto

.auction2-grid-artwork__primary-information
  border-bottom 1px dotted gray-lighter-color
  padding-bottom 10px
  margin-bottom 10px
  > *
    overflow ellipsis

.auction2-grid-artwork__lot-number
  avant-garde()
  font-size 13px
  color black
  margin-bottom 2px
