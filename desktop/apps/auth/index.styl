@require '../../components/stylus_lib'

#auth-page
#reset-password-page
  text-align center
  max-width 400px
  margin layout-side-margin auto
  h1
    margin 20px 0

#auth-artsy-logo
  font-size 45px
  line-height @font-size

.auth-page-error-message
  color red-color
  text-align left
  a
    color red-color

.auth-signup
  &__logo
    height 40px
    font-size 40px !important
    line-height 40px !important
  &__title
    margin 20px
    garamond-size('l-headline')
  @media screen and (max-width: 768px)
    &__title
      garamond-size('headline')

.standard-auth-signup-page
  &__facebook
    background-color #4e65b1
    &:hover
      background-color #4e65b1
  &__divider
    position relative
    &-text
      avant-garde-size('s-headline')
      background-color white
      display inline-block
      z-index 100
      padding 10px
    &:before
      content ''
      position absolute
      bottom 50%
      left 0
      right 0
      border-bottom 1px solid #e5e5e5
      z-index -1

#auth-footer.standard-auth-signup-page__footer
  color gray-darker-color
  a
    color gray-darker-color
  aside
    garamond-size('s-caption')

.standard-auth-login-page
  &__checkbox
    vertical-align bottom
