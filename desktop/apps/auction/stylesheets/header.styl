.auction-header
  clearfix()
.auction-header-primary
.auction-header-metadata
  float left

.auction-header-primary
  width 75%
  padding-right 30px
.auction-header-metadata
  width 25%

.auction-sub-header
  avant-garde-size('body', true)

.auction-title
  padding-right 30px
  garamond-size('l-headline')

.auction-description
  margin 30px 0
  garamond-size('l-body')
  > p
    block-margins(15px)
  a
    fine-faux-underline()


.auction-header-register-button
  margin-bottom 30px

.auction-header-metadata-cell
  margin-bottom 20px
  > h3
    margin 0.5em 0
    avant-garde-size('body', true)
.auction-header-metadata-cell-contents
  > p
    block-margins(10px)

.auction-callout
  padding 15px 0 12px 0
  margin 20px 0
  position relative
  border-bottom 1px solid gray-lighter-color
  border-top 1px solid gray-lighter-color
  garamond-size('l-body')
  .add-to-calendar
    margin-left 30px
  .auction-callout-live-label
    position absolute
    right 0
    top 15px
    .auction-live-label
      avant-garde-size('body')
      letter-spacing 3px
    .auction-live-tooltip
      margin-left 10px
      garamond-size('s-body')
      top -3px
      margin-left 14px
      &:hover::before
        color white
        background gray-darker-color
        border 0
      &::before
        background transparent
        border 1px solid gray-lighter-color
        color black
        width 20px
        height @width
        line-height @width - 1px
