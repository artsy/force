footer.auction-footer.auction-page-section( class= articles.length ? 'has-articles' : 'has-no-articles' )
  if articles.length
    .auction-footer__auction-articles
      for article in articles.models
        include ../../../components/article_figure/template

  if footerItems && footerItems.length > 0 && !auction.isAuctionPromo()
    - var item = footerItems[0]
    .auction-footer__auction-app-promo-wrapper
      a.auction-footer__auction-app-promo( href= item.href, target= item.target )
        .auction-footer__auction-app-promo-image
          img( src= item.src, alt= item.alt )
        .auction-footer__auction-app-promo-metadata
          .auction-footer__auction-app-promo-title
            = item.title
          .auction-footer__auction-app-promo-subtitle
            = item.subtitle
