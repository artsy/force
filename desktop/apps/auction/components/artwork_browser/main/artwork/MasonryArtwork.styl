.auction-page-MasonryArtwork
  display block
  garamond-size('s-body')
  color gray-darker-color
  text-decoration none
  line-height 1.2
  margin-bottom 15px

  &__image
    margin-bottom 15px
    width 100%

  &__lot-number, &__artists
    font-weight 600

  &__lot-number
    avant-garde()
    font-size 10px
    margin-bottom 2px
    text-align left
    position relative

  &__bid-status
    position relative
    top -2px

  &__sale-message
    garamond-size('l-caption')

  &__artists, &__title, &__bid-status
    +respond-mobile()
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      garamond-size('l-caption')
