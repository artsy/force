background-size-cover()
  background-position center
  background-repeat no-repeat
  background-size cover

.gallery-partnerships2__header
  background-size-cover()
  height 630px
  color white
  display flex
  align-items center
  position relative

  .icon-logotype
    color white
    font-size 35px
    position absolute
    top 30px
    left 30px
  &__content-container
    max-width 615px
    text-align center
    margin 0 auto
  &__title
    garamond-size('xxl-headline', true)
    margin-bottom 20px
  &__signup-buttons
    display inline-block
    margin-top 35px
  &__chevron
    position absolute
    bottom 20px
    left 0
    width 100%
    text-align center
    opacity 0.5
    i
      font-size 46px
      &::before
        transform rotate(90deg)
        display inline-block

.gallery-partnerships2__intro
  padding 100px 160px
  text-align center
  img
    margin 0 auto
  &__title
    margin 17px 0 12px

.gallery-partnerships2__gallery-logos
  text-align center
  height 130px
  line-height 130px
  background-color #f8f8f8
  img
    display inline-block
    vertical-align middle
    transform: scale(0.5)

.gallery-partnerships2__connect-with-collectors
  height 610px
  display flex

  &__image
    flex 1
    display flex
    justify-content center
    img
      align-self flex-end
  &__content_container
    display flex
    flex 1
    &__wrapper
      width 450px
      align-self center
  &__content
    margin 10px 0 20px


