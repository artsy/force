.bg-gray
  background-color #f8f8f8

img
  display inline

.gallery-partnerships2
  hr
    margin 0
    border-top solid 1px #e5e5e5

.gallery-partnerships2-white-signup-button
  avant-garde-size('body')
  display inline-block
  width 190px
  height 45px
  line-height 45px
  background-color white
  color black
  text-align center
  text-decoration none

.gallery-partnerships2-black-signup-button
  @extends .gallery-partnerships2-white-signup-button
  background-color black
  color white

background-size-cover()
  background-position top
  background-repeat no-repeat
  background-size cover

.gallery-partnerships2__header
  background-size-cover()
  height 500px
  color white
  position relative

  @media screen and (max-width: 768px)
    height 460px
    background-position 14%

  &__headline
    garamond-size('xxl-headline')
    @media screen and (max-width: 960px)
      garamond-size('xxl-headline')
    @media screen and (max-width: 600px)
      garamond-size('l-headline')
      margin 0 20px 20px 20px

  .icon-logotype
    color white
    font-size 35px
    position absolute
    top 30px
    left 30px
  &__content-container
    max-width 615px
    text-align center
    margin 0 auto
    @media screen and (max-width: 600px)
      max-width 475px

.gallery-partnerships2__intro
  padding 100px 0 50px
  text-align center
  @media screen and (max-width: 768px)
    padding 50px 0 0

  &__headline
    garamond-size('s-headline')
    @media screen and (max-width: 768px)
      garamond-size('l-body')

  &__subtitle
    garamond-size('l-body')
    @media screen and (max-width: 768px)
      garamond-size('s-body')

.gallery-partnerships2__gallery-logos
  min-height 130px

  @media screen and (max-width: 768px)
    flex-direction column
    padding 15px 25px
  img
    zoom 50%

.gallery-partnerships2__connect-with-collectors
  min-height 610px
  @media screen and (max-width: 960px)
    min-height 490px
  @media screen and (max-width: 768px)
    padding-top 40px

  &__headline
    garamond-size('l-headline')
    margin-bottom 10px
    @media screen and (max-width: 768px)
      margin-bottom 30px
      garamond-size('headline')

  &__notification-container
    height 610px
    position relative
    @media screen and (max-width: 960px)
      height 490px
    @media screen and (max-width: 768px)
      height inherit

  &__content_container
    &__wrapper
      width 450px

  &__image
    width 100%
    max-width 410px
    max-height 515px
    @media screen and (max-width: 960px)
      max-width 318px
    @media screen and (max-width: 768px)
      max-width 280px
      padding 50px 0px 0

  &__sub_image
    position absolute
    top 50%
    margin-left auto
    margin-right auto
    left 0
    right 0
    width 100%
    max-width 450px
    height 100%
    max-height 146px
    display none
    @media screen and (max-width: 960px)
      max-width 375px
      max-height 114px
    @media screen and (max-width: 768px)
      max-width 330px
      max-height 100px

.gallery-partnerships2__stats
  padding 100px 0
  overflow-x hidden
  @media screen and (max-width: 768px)
    padding 50px 0

  &__headline
    garamond-size('l-headline')
    margin-bottom 10px
    @media screen and (max-width: 768px)
      garamond-size('headline')
      padding-bottom 20px

  &__inner-container
    width 450px

  &__button
    padding 20px 0 40px

  &__frame
    @media screen and (max-width: 768px)
      width 100%
      z-index 100000
      position relative

  &__slideshow
    width 678px
    height 416px
    position absolute
    top 40px
    left 111px
    z-index -1
    img
      width 667px
      height 416px

    @media screen and (max-width: 768px)
      width 76.5%
      height 76.1%
      top 7.4%
      left 11.8%

      .mgr-cells
      .flickity-viewport
        height 100%

      .mgr-cell
      img
        width 100%
        height 100%
        z-index 1
      .mgr-cell:not(.is-selected)
        visibility hidden

.gallery-partnerships2__chat
  min-height 510px
  padding 100px 0
  @media screen and (max-width: 768px)
    padding 50px 0

  &__fallback_image
    display none

  &__fallback_image
  &__video
    width 100%
    max-width 420px
    @media screen and (max-width: 960px)
      max-width 325px
    @media screen and (max-width: 768px)
      max-width 340px

  &__learn_more
    @media screen and (max-width: 768px)
      margin 40px 0

  &__content-container
    width 100%
    max-width 420px
    garamond-size('l-headline')
    @media screen and (max-width: 960px)
      max-width 325px
    @media screen and (max-width: 768px)
      max-width 340px
      garamond-size('headline')

  &__title
    margin 10px 0
    @media screen and (max-width: 768px)
      margin 30px 0 10px

.gallery-partnerships2__folio
  min-height 557px
  padding 100px 0
  @media screen and (max-width: 768px)
    padding 50px 0

  &__inner-container
    width 450px
    garamond-size('l-headline')

    @media screen and (max-width: 768px)
      width 100%
      garamond-size('headline')

  &__features
    @media screen and (max-width: 768px)
      margin-bottom 30px
      margin-top 20px

  @media screen and (max-width: 960px)
    &__image-container
      align-self center

  &__image
    width 100%
    @media screen and (max-width: 768px)
      margin 45px auto 0
      display block

.gallery-partnerships2__testimonials
  padding 40px 0
  height inherit
  garamond-size('l-headline')
  @media screen and (max-width: 768px)
    garamond-size('headline')

  &__slideshow
    width 695px
    nav
      margin 0 auto

    @media screen and (max-width: 768px)
      padding 30px 0
      .flickity-slider
        display flex
        align-items center

  &__slideshow__item
    width 695px
    text-align center
    color #999999
    @media screen and (max-width: 768px)
      width 100%
      padding 0 20px
      &__author
        text-transform inherit

  // .flickity-slider
  //   display flex

  &__slideshow__item.js-mgr-cell.is-selected
    top 50%
    transform translateY(-50%)

  .mgr-dot
    color #E5E5E5

  .mgr-dot.is-active
    color #999


.gallery-partnerships2__plans
  min-height 605px
  padding 50px 20px

  &__title
    text-align center
    garamond-size('l-headline')
    @media screen and (max-width: 768px)
      garamond-size('headline')

  &__table
    border-collapse collapse
    width 100%

    > tbody
      border 1px solid #e5e5e5
      border-collapse separate

    > thead
    > tbody
    > tfoot
      > tr
        > th
          text-align center
          avant-garde-size('body')
          padding-bottom 10px
          @media screen and (max-width: 768px)
            padding-top 20px

        > td
          width 240px
          padding 8px 5px
          border-top 1px solid #e5e5e5
          text-align center
          font-weight bold

        > th:first-child
        > td:first-child
          text-align start
          width 340px
          font-weight inherit

      > tr:nth-of-type(even)
        background-color: #f8f8f8

.gallery-partnerships2__form
  @media screen and (max-width: 768px)
    padding 0 20px
  &__header
    margin-top 60px
    text-align center
    margin-bottom 50px
    @media screen and (max-width: 768px)
      margin-bottom 40px

    aside
      width 610px
      margin 0 auto
      garamond-size('s-headline')
      @media screen and (max-width: 768px)
        width 100%
        garamond-size('l-body')
  @media screen and (max-width: 768px)
    #mktoForm_2001
      width 100%

  &__title
    garamond-size('xl-headline')
    margin-bottom 50px
    @media screen and (max-width: 768px)
      garamond-size('headline')
      margin-bottom 40px

  &__contact
    text-align center
    padding-bottom 160px
    @media screen and (max-width: 768px)
      padding-bottom 90px

  &__marketo-form
    width 740px
    @media screen and (max-width: 768px)
      width 100%
    margin 0 auto 30px auto
    .mktoOffset, .mktoGutter
      display none
    input
      padding 12px !important
      border 2px solid gray-lighter-color
      transition border-color 0.25s
      font-size 17px !important
      &:focus
      &:active
      &.is-active
        border-color purple-color
        outline none
        transition border-color 0.5s
    .mktoForm
      @media screen and (max-width: 768px)
        padding 0
    form, input, .mktoFormCol, input, .mktoFieldWrap
      width 100% !important
    .mktoButtonRow
      margin-top 30px !important
      width 100%
      text-align center !important
    .mktoButtonWrap
      margin 0 !important
      button
        padding 15px !important
        border 0
        color white
        background black
        avant-garde()
        avant-garde-size('l-headline')
        width 100%
        margin-top 10px !important
        transition background-color 0.3s
        font-size 13px !important
        &:hover, &:active
          background purple-color

    .mktoField
      border-radius 0
      @media screen and (max-width: 768px)
        height 43px !important
    select.mktoField
      @media screen and (max-width: 768px)
        padding-top 10px !important

    form
      margin-top 10px

    label
      avant-garde()
      avant-garde-size('s-headline')
      color black
    label.mktoLabel
      font-weight normal !important

    .mktoFormRow
      display flex
      @media screen and (max-width: 768px)
        flex-direction column

      .mktoFieldDescriptor
        margin-bottom 10px

      .mktoLabel
        margin-bottom 5px

      .mktoHasWidth
        width 100% !important

      > .mktoFieldDescriptor:nth-child(2n)
        margin-left 30px
        @media screen and (max-width: 768px)
          margin-left 0

    .mktoFormRow:nth-child(4n)
      .mktoFormCol:first-child
        .mktoFieldWrap
          @extends .bordered-select

          &:before
            display none
          &:after
            border-top-color black
            margin-right 7px
            margin-top 6px
          select
            padding 12px 10px 11px
    .mktoAsterix
      display none !important

    @keyframes popup
      0%
        transform scale(1)

      50%
        transform scale(1.1)

      100%
        transform scale(1)
