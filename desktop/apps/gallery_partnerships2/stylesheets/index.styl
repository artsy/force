@require '../../../components/main_layout/stylesheets/index'
@require './grid_styles'

.collect-art__svg-icon
  display inline
  vertical-align middle
  margin-right 10px

.collect-art-responsive-layout-container
  .collect-art-main-layout-container
    margin 0 auto
    max-width 1250px
  margin 0 20px
  @media screen and (min-width: 768px)
    margin 0 55px
  @media screen and (min-width: 1440px)
    margin 0 150px
  @media screen and (min-width: 1660px)
    margin 0 200px

.collect-art-show-on-mobile
  display none
  @media screen and (max-width: 768px)
    display inherit

.collect-art-show-on-desktop
  display inherit
  @media screen and (max-width: 768px)
    display none

.collect-art-text-center-on-mobile
  text-align inherit
  @media screen and (max-width: 768px)
    text-align center

.gallery-partnerships2-white-signup-button
  avant-garde-size('body')
  display inline-block
  width 190px
  height 45px
  line-height 45px
  background-color white
  color black
  text-align center
  text-decoration none

.gallery-partnerships2-black-signup-button
  @extends .gallery-partnerships2-white-signup-button
  background-color black
  color white

.collect-art-buttons
  width 270px
  height 45px
  box-sizing border-box
  > i
    margin-left 0

