@require '../../../components/main_layout/stylesheets/index'
@require '../../../components/merry_go_round'
@require './grid_styles'

.responsive-layout-container
  .main-layout-container
    margin 0 auto
    max-width 1250px
  margin 0 20px
  @media screen and (min-width: 768px)
    margin 0 55px
  @media screen and (min-width: 1440px)
    margin 0 150px
  @media screen and (min-width: 1660px)
    margin 0 200px

.gallery-partnerships2-show-on-mobile
  display none
  @media screen and (max-width: 768px)
    display inherit

.gallery-partnerships2-show-on-desktop
  display inherit
  @media screen and (max-width: 768px)
    display none

.text-center-on-mobile
  text-align inherit
  @media screen and (max-width: 768px)
    text-align center

.reverse-on-mobile
  @media screen and (max-width: 768px)
    flex-wrap wrap-reverse

.max-width-on-mobile
  @media screen and (max-width: 768px)
    max-width 450px
    margin-left auto
    margin-right auto

